@{
    ViewData["Title"] = "Project Dashboard";
}
@model Project

<div>
    <div class="d-flex justify-content-center">
        <h1>Projects</h1>
        <a class="btn btn-primary open-button" onclick="openForm()">Add a Project</a>
        <div></div>
    </div>

    <div class="form-popup" id="myForm">
        <form asp-action="CreateProject" asp-controller="Project" method="post"  class="form-container">
            <h1>Add a Project</h1>

            <label asp-for="Name"><b>Project Name</b></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>

            <label asp-for="Description"><b>Project Description</b></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>

            <button class="btn">Add Project</button>
            <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
        </form>
    </div>
</div>